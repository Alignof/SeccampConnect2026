{
    "name": "ESP32S3 Rust Development (Nix-based)",
    "image": "ghcr.io/alignof/esp32s3_led_blink:latest",

    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "serayuzgur.crates",
                "mutyhala.vscode-rust-test-adapter"
            ],
            "settings": {
                "rust-analyzer.checkOnSave.command": "clippy"
            }
        }
    },

    "remoteUser": "root",
    "workspaceFolder": "/work",

    "mounts": [
        "source=${localWorkspaceFolder},target=/work,type=bind"
    ],

    "runArgs": [
        "--privileged",
        "--device=/dev/ttyACM0:/dev/ttyACM0"
    ],

    "overrideCommand": true
}
